<% img_db.forEach(function(img, index) { 
  if (index % 3 == 0) { %>
    <div class="row">
<%} %>
  <div class="span4">
    <h2><a href="/u/<%= img.user %>"><%= img.NAME %></a></h2>
            <% if (img.CACHED == '1') {%>
							<a href="/cache/?key=<%=img.CONTENTID %>">
              <img src="/cache/?key=<%=img.CONTENTID%>" style = "width:100%" />
							</a>
            <% } else { %>
							<a href="<%=img.URL%>">
              <img src="<%=img.URL%>" style = "width:100%" />
							</a>
            <% } %>
    <p align="right"><small><%= img.NAME %></small></p>
  </div>
<% if (index % 3 == 2) { %>
    </div><!-- end row -->
<% } %>
<%}) %>
<% if (img_db.length % 3 != 0) { %>
  </div><!-- end row -->
<%} %>
